{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://heartmonitor-production.up.railway.app/api/$1"
    },
    {
      "source": "/admin/(.*)",
      "destination": "https://heartmonitor-production.up.railway.app/admin/$1"
    },
    {
      "source": "/static/(.*)",
      "destination": "https://heartmonitor-production.up.railway.app/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

